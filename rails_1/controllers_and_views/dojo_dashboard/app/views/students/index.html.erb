<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8">
		<title>All the Dojos</title>
		<style media="screen">
			.link{
				display: inline-block;
				margin-top: 50px;
				color: blue;
			}
			.success{
				color: green;
			}
		</style>
	</head>
	<body>
		<div class="container">
			<h1><%= @dojo.branch%> Dojo</h1>

			<div class="info">
				<p>Address: <%= @dojo.street%></p>
				<p>City: <%= @dojo.city%></p>
				<p>State: <%= @dojo.state%></p>
			</div>

			<h2>Student Roster</h2>

			<% if flash[:success] %>
				<p class='success'><%= flash[:success] %></p>
			<% end %>

			<table>
				<thead>
					<tr>
						<th>First Name</th>
						<th>Last Name</th>
						<th>Email</th>
						<th>Actions</th>
					</tr>
				</thead>
				<tbody>
					<% @students.each do |student| %>
					<tr>
						<td><%= student.first_name %></td>
						<td><%= student.last_name %></td>
						<td><%= student.email %></td>
						<td>
							<a href="/dojos/<%= @dojo.id %>/students/<%= student.id%>">Show</a>
							<a href="/dojos/<%= @dojo.id %>/students/<%= student.id%>/edit">Edit</a>
							<a href="/dojos/<%= @dojo.id %>/students/<%= student.id%>" data-method="delete">Delete</a>
						</td>
					</tr>
					<% end %>
				</tbody>
			</table>

			<a href="/dojos" class="link">Home</a>
			<a href="/dojos/<%= @dojo.id%>/students/new" class="link">Add Student</a>
		</div>
	</body>
</html>
